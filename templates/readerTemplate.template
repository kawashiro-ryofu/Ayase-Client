<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <link href="../styles.css" rel="stylesheet">
    <link href='../static/css/font-awesome/css/font-awesome.min.css' rel="stylesheet">
    <title>{{ title }}</title>
</head>
<body>
	<script>
        window.$ = window.jQuery = require('jquery');
	</script>
    <style>
        body{
            overflow-y: auto;
            overflow-x: inherit;
        }
        #main-wrapper{
            display: block;
            padding-top: 30px;
            padding-left: 25vh;
            padding-right: 25vh;
            padding-bottom: 100px;
            user-select: text
        }
        @media only screen and (max-width: 750px) {
            #main-wrapper{
                display: block;
                padding-top: 30px;
                padding-left: 5vh;
                padding-right: 5vh;
                padding-bottom: 100px;
            }
        }
    </style>
    <div id="main-wrapper">
        <div id="read_title">
            <h1>{{ title }}</h1>
        </div>
        <div id="read_notic_info" class="notic_info">
            <span class="read_notic_pubDate"><i class="fa fa-calendar-o" aria-hidden="true"></i> {{ pubDate }}</span>
            <span class="read_notic_publisher"><i class="fa fa-user" aria-hidden="true"></i> {{ publisher }}</span>
            <span class="read_notic_level"><i class="fa fa-dot-circle-o" aria-hidden="true"></i> {{ level }}</span>
        </div>
        <hr>
        <div id="read_notic_content">{{ content }}</div>
    </div>
</body>
